#############################################################################
# README 
#
# === Create Container
#
# singularity create --size 900 ./pod-ubuntu17-ompi2.img
# sudo singularity bootstrap ./pod-ubuntu17-ompi2.img ./pod-ubuntu17-ompi2.def
#
# === Required POD Modules
#
# module load singularity
# module load openmpi/2.0.1/gcc.4.9.0
#
# === Provides
#
# OpenMPI 2.0.1: /usr/local/bin, /usr/local/lib
# MPI Example:   /usr/bin/mpi_ring
#
#############################################################################

BootStrap: debootstrap
OSVersion: zesty
MirrorURL: http://archive.ubuntu.com/ubuntu/
Include: software-properties-common

%environment
PATH=/usr/local/sbin:/usr/local/bin:$PATH
LD_LIBRARY_PATH=/usr/local/lib64:/usr/local/lib:$LD_LIBRARY_PATH

%labels
AUTHOR Penguin Computing

%post
    ##########################################################################
    # CONFIG AND PREP
    ##########################################################################
    
    # CONFIG
    BUILD_DIR=/tmp/build    # temp build folder inside the container
    PMAKE=2                 # 0 runs 'make', any other int runs 'make -j<int>'

    # APT
    add-apt-repository "deb http://archive.ubuntu.com/ubuntu zesty main restricted universe"
    apt-get update
    apt-get -y install apt-transport-https wget g++ gcc gfortran libtool libtool-bin make flex autoconf libpsm-infinipath1-dev libpsm-infinipath1 git uuid-dev
    apt-get clean

    # BUILD ENV
    rm -rf $BUILD_DIR
    mkdir -p $BUILD_DIR

    export PATH=/usr/local/sbin:/usr/local/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/lib64:/usr/local/lib:$LD_LIBRARY_PATH

    ##########################################################################
    # APPLICATIONS
    ##########################################################################

    # PSM2
    cd $BUILD_DIR
    git clone https://github.com/01org/opa-psm2.git
    cd opa-psm2
    # LIBDIR must be set to avoid collision with host OS libpsm2.so in /usr
    make install LIBDIR=/usr/local/lib

    echo $LD_LIBRARY_PATH

    # OMPI
    cd $BUILD_DIR
    wget -N https://www.open-mpi.org/software/ompi/v2.0/downloads/openmpi-2.0.1.tar.gz
    tar -xzvf openmpi-2.0.1.tar.gz
    cd openmpi-2.0.1
    ./configure --prefix=/usr/local --with-psm --with-psm2
    [ $PMAKE -eq 0 ] && make || make -j${PMAKE}
    make install
    /usr/local/bin/mpicc examples/ring_c.c -o /usr/bin/mpi_ring

    # CLEANUP
    cd / 
    rm -rf $BUILD_DIR

